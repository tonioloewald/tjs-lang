{
  "name": "tjs-platform-functions",
  "version": "0.1.0",
  "description": "TJS Platform Cloud Functions",
  "type": "module",
  "main": "lib/index.js",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "build:transpile": "cd .. && for f in functions/src/*.tjs; do bun src/cli/tjs.ts emit \"$f\" > \"${f%.tjs}.js\"; done",
    "build:bundle": "bun build src/index.js --outfile=lib/index.js --target=node --conditions=bun --external=firebase-functions --external=firebase-admin --external=firebase-functions/* --external=firebase-admin/*",
    "build": "npm run build:transpile && npm run build:bundle",
    "serve": "firebase emulators:start --only functions",
    "deploy": "npm run build && firebase deploy --only functions"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "tjs-lang": "^0.2.8"
  }
}
